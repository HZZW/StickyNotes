    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="关于此应用"
    PrimaryButtonText="查看帮助"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick">

    <Grid Margin="0,0,12.796,-21.867">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="32" />

        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   Text="由东北大学浅易便签开发小组制作"
                   Style="{StaticResource  SubtitleTextBlockStyle}" HorizontalAlignment="Left" Margin="27,-7,0,0" VerticalAlignment="Top" Grid.RowSpan="2" />
        <TextBlock
                   Text=" ©2018 浅易便签小组。 保留所有权力。"
                   Style="{StaticResource  BaseTextBlockStyle}"
                   Margin="28,21,0,0" HorizontalAlignment="Left" Grid.RowSpan="2" VerticalAlignment="Top" />
