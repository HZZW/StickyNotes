    </Page.Resources>
    
    <ScrollViewer  HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <Grid  MinWidth="500" >
            <!--<Grid.Background>
                <AcrylicBrush BackgroundSource="HostBackdrop"
                          TintColor="WhiteSmoke"
                          TintOpacity="0.2"></AcrylicBrush>
            </Grid.Background>-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <!-- *******************放置按钮***********************-->
        
            <Button Name="BackButton"
                Grid.Row="0"
                Grid.Column="0"
                Style="{StaticResource NavigationBackButtonNormalStyle}"
                Click="BackButton_OnClick" />
            <Border Grid.Row="1" 
                   Grid.ColumnSpan="2" Background="WhiteSmoke">
                <TextBlock   Margin="15,6,0,6"  Text="编辑设置" 
                  Style="{StaticResource CaptionTextBlockStyle}"/>
            </Border>
            <AppBarButton  Grid.Row="2" 
                Grid.Column="0"
                Icon="Character" 
                Label="字体样式"
                Width="100"  />
            <AppBarButton  Grid.Row="3" 
                Grid.Column="0"
                Icon="FontSize" 
                Label="字体大小" 
                Width="100" />
            <AppBarButton  Grid.Row="4" 
                Grid.Column="0"
                Icon="Play" 
                Label="主题颜色" 
                Width="100" />
            <Border Grid.Row="6" 
                    Grid.ColumnSpan="2" 
                    Background="WhiteSmoke">
                  <TextBlock   Margin="15,6,0,6"  Text="系统设置" 
                   Style="{StaticResource CaptionTextBlockStyle}"/>
            </Border>
            <AppBarButton Grid.Row="7" 
                Grid.Column="0"
                Icon="GoToStart"                 
                Label="开机自启"
                Width="100" />
            <AppBarButton Grid.Row="8" 
                Grid.Column="0"
                Icon="Remote"     
                Label="模式设置" 
                Width="100" />
            <AppBarButton Grid.Row="9" 
                Grid.Column="0"
                 Icon="RepeatAll" 
                Label="恢复默认" 
                Width="100" />

            <!-- ****************************放置选项按钮*********************************** -->
            <Button Grid.Row="2" 
                Grid.Column="1"
                Name="FontStyleButton"
                Content="Calibri" 
                HorizontalAlignment="Center"
                Background="Snow"  
                MinWidth="180" 
                FontSize="20" 
                BorderThickness="1.5" 
                ClickMode="Release" >
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem>Calibri</MenuFlyoutItem>
                        <MenuFlyoutItem>Sego UI</MenuFlyoutItem>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>

            <Slider x:Name="FontSlider"
                    Grid.Row="3"
                    Grid.Column="1"
                    Width="500"
                    Minimum="1"
                    Maximum="50"
                    StepFrequency="1" />
            <Button Grid.Row="4"  
                Grid.Column="1" 
                Name="FontColorButton"
                Content="Default" 
                HorizontalAlignment="Center" 
                Background="Snow"  
                MinWidth="180" 
                FontSize="20" 
                BorderThickness="1.5"
                ClickMode="Release" >
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="Default" IsHitTestVisible="False"  Click="ColorChoose_Click"/>
                        <MenuFlyoutItem Text="pink" IsHitTestVisible="False" Background="Pink" Click="ColorChoose_Click"/>
                        <MenuFlyoutItem Text="green" IsHitTestVisible="False"  Background="Green" Click="ColorChoose_Click"/>
                        <MenuFlyoutItem Text="orange"  IsHitTestVisible="False" Background="Orange" Click="ColorChoose_Click"/>
                        <MenuFlyoutItem Text="yellow"  IsHitTestVisible="False" Background="Yellow" Click="ColorChoose_Click"/>
                        <MenuFlyoutItem Text="purple" IsHitTestVisible="False" Background="purple" Click="ColorChoose_Click"/>
                        <MenuFlyoutItem Text="black" IsHitTestVisible="False" Background="MidnightBlue" Click="ColorChoose_Click"/>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>
            
            <ToggleButton Name="btnSetState"
                      Margin="0,4,0,0"
                      Click="btnSetState_Click"
                      Content="当前值&#x2502;否"
                          Grid.Row="7" Grid.Column="1" 
                          HorizontalAlignment="Center"    />

            <Button Grid.Row="8" 
                    Grid.Column="1"  
                    HorizontalAlignment="Center" 
                    Background="Snow" 
                    Content=" 退出当前模式"   
                    ClickMode="Press"
                    Click="QiuteModleButton_Click"   />

            <Button Grid.Row="9" 
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    Background="Snow" 
                    Content=" 恢复默认"  
                    ClickMode="Press" 
                    Click="RecoverButton_Click"   />
    </Grid>

    </ScrollViewer>
       
</Page>
