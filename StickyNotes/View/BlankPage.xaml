            <Button Height="32" 
                    Width="48"  
                    Content="&#xE712;"
                    Background="{ThemeResource MyBackgroundBrush}"
                    Foreground="{ThemeResource MyForegroundBrush}"
                    FontWeight="Normal"
                    FontFamily="Segoe MDL2 Assets" >

                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="提醒" Click="ToastButton_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xED5A;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Text="提醒取消"
                                        Click="ToastCancelButton_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE916;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Text="全部提醒" Click="AllToastButton_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE71D;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Text="生成磁贴" Click="TileButton_Click">
                            <MenuFlyoutItem.Icon>
